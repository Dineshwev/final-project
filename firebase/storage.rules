rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isValidContentType(contentType) {
      return contentType.matches('image/.*') || 
             contentType.matches('application/pdf') ||
             contentType.matches('text/.*');
    }
    
    // Reports folder - PDFs and screenshots
    match /reports/{userId}/{reportId}/{fileName} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidContentType(request.resource.contentType) &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB max
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // User uploads folder
    match /uploads/{userId}/{fileName} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidContentType(request.resource.contentType) &&
                      request.resource.size < 5 * 1024 * 1024; // 5MB max
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Profile pictures
    match /profile_pics/{userId} {
      allow read: if true; // Public read access
      allow create, update: if isAuthenticated() && 
                             isOwner(userId) && 
                             request.resource.contentType.matches('image/.*') &&
                             request.resource.size < 2 * 1024 * 1024; // 2MB max
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
  }
}